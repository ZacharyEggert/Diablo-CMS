{
    "compilerOptions": {
        "target": "esnext",
        "module": "CommonJS",
        "jsx": "preserve",
        "lib": ["ESNext", "ES5", "ES6"],
        "baseUrl": "./src/",
        "paths": {
            // "@lib": ["lib/index"],
            // "@lib/*": ["lib/*"],
            // "@controllers/*": ["controllers/*"],
            // "@controllers": ["controllers/index"],
            // "@models/*":src/entities/*],
            // "@models":src/entities/index],
            // "@routes/*": ["routes/*"],
            // "@routes": ["routes/index"]
        },
        "moduleResolution": "node",
        "strict": true,
        "allowJs": true,
        "noEmit": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "isolatedModules": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": false,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "incremental": false,
        "outDir": "./out",
        "rootDir": "./src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true
    },
    "include": ["src/**/*"]
}
